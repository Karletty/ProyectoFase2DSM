<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".security_fragments.LoginFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:paddingBottom="0dp">

        <ImageView
            android:layout_gravity="center|top"
            android:layout_marginTop="50dp"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="50dp"
            android:id="@+id/backUtil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/back_util_1" />

        <LinearLayout
            android:layout_gravity="center"
            android:paddingHorizontal="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Usuario"
                android:layout_marginBottom="40dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress"
                    android:paddingVertical="13dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:layout_marginBottom="40dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:textSize="16sp"
                    android:paddingVertical="13dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_marginBottom="10dp"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="@color/dark_details"
                android:fontFamily="@font/inika"
                android:paddingHorizontal="10dp"
                android:text="Ingresar"
                android:textSize="21sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>