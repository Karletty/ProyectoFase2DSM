<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_fragments.CreateDoctorFragment">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary"
        android:paddingBottom="0dp">

        <ImageView
            android:id="@+id/imageBack1"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo1"
            android:rotation="20"
            android:layout_gravity="center|end"
            android:layout_marginEnd="15dp"
            app:srcCompat="@drawable/back_utils_2"
            />

        <ImageView
            android:id="@+id/imageBack2"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo2"
            android:rotation="340"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="130dp"
            android:layout_marginStart="15dp"
            app:srcCompat="@drawable/back_utils_3"/>

        <ImageView
            android:id="@+id/imageBack3"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:adjustViewBounds="true"
            android:contentDescription="Fondo3"
            android:rotation="340"
            android:layout_gravity="center|start"
            android:layout_marginBottom="200dp"
            android:layout_marginStart="10dp"
            app:srcCompat="@drawable/back_utils_4"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingVertical="40dp"
            android:gravity="center_horizontal"
            android:paddingHorizontal="55dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/inika"
                android:text="Registro de Doctores"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Veterinaria"
                    app:srcCompat="@drawable/view_utils_1"
                    android:layout_marginEnd="110dp"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Veterinario"
                    app:srcCompat="@drawable/view_utils_2" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:layout_marginBottom="30dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:textSize="16sp"
                    android:paddingVertical="13dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:layout_marginBottom="30dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingVertical="13dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="DUI"
                android:layout_marginBottom="30dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDUI"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:textSize="16sp"
                    android:paddingVertical="13dp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nacimiento"
                android:layout_marginBottom="30dp"
                app:boxCollapsedPaddingTop="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:paddingVertical="13dp"
                    android:focusable="false"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/inputGender"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:hint="Sexo"
                app:boxCollapsedPaddingTop="0dp">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteGenders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rounded_input"
                    android:fontFamily="@font/inika"
                    android:inputType="none"
                    android:paddingVertical="13dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnAddDoctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/dark_details"
                android:textColor="@color/white"
                android:fontFamily="@font/inika"
                android:paddingHorizontal="10dp"
                android:text="Guardar"
                android:textSize="21sp" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>